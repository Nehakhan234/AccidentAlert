<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="neha.accidentalert.MainActivity"
    android:background="@drawable/acci">


    <TextView
        android:text="Road MishApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:textColor="@android:color/background_dark"
        android:textColorLink="?attr/actionMenuTextColor"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Are you fine??"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/button1"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginEnd="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="Start"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Yes, I'm fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textColor="@android:color/black"
        android:textColorLink="?attr/actionMenuTextColor"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button1" />

    <Button
        android:text="No, Send SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button1" />


</RelativeLayout>
